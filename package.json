{
  "name": "movie-catalog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:server": "node out-tsc/server/index.js",
    "build": "ng build",
    "build:server": "tsc -P tsconfig.server.json",
    "watch": "ng build --watch --configuration development",
    "watch:server": "nodemon --watch server --exec ts-node -P tsconfig.server.json server/index.ts",
    "copy:server": "cpx \"server/**/*.{json,jpeg,jpg}\" out-tsc/server",
    "test": "ng test",
    "serve:ssr:movie-catalog": "node dist/movie-catalog/server/server.mjs",
    "lint": "ng lint",
    "lint:architecture": "steiger ./src",
    "lint:architecture:watch": "steiger ./src --watch",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "format:pretty": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.5",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.14",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.14",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.19.22",
    "angular-eslint": "20.4.0",
    "cpx": "^1.5.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "pretty-quick": "^4.2.2",
    "steiger": "^0.5.11",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.46.0"
  }
}
